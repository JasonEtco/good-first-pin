{
  "name": "good-first-pin",
  "version": "1.0.0",
  "description": "A Probot App that rotates pinned issues based on Good First Issue labels",
  "author": "Jason Etcovitch <jasonetco@github.com>",
  "license": "ISC",
  "repository": "https://github.com//good-first-pin.git",
  "homepage": "https://github.com//good-first-pin",
  "bugs": "https://github.com//good-first-pin/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "start": "probot run ./lib/index.js",
    "build": "rimraf lib && tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "lint": "tslint --project tests",
    "test": "tsc --noEmit -p tests && jest --coverage && npm run lint",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.5.2",
    "jest": "^23.4.0",
    "nock": "^10.0.4",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^23.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^18.0.0"
  },
  "engines": {
    "node": "10.x.x"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    }
  }
}
